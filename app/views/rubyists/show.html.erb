<div class="container">
  <h1 class="col-md-6 text-align-center"><%= "#{params[:id]}" %> Repositories</h1>
  <h4 class="col-md-1 col-md-offset-4"><%= link_to "Home", root_path %></h4>
</div>
<br>
<ul class="list-inline col-md-offset-5">
  <% @pages.times do |x| %>
    <li><%= link_to "Page #{x + 1}", page: x + 1 %></li>
  <% end %>
</ul>
<br>
<ul>
  <% @gits.each do |git| %>
    <ul class="list-inline row">
      <li class="col-md-4 col-md-offset-1">Repository: <%= link_to git.name, git.html_url %></li>
      <li class="col-md-2">Created at: <%= git.created_at %></li>
      <li class="col-md-2 col-md-offset-1">Written in: <%= git.language %><li>
    </ul>
    <hr>
  <% end %>
</ul>
<br>
<ul class="list-inline col-md-offset-5">
  <% @pages.times do |x| %>
    <li><%= link_to "Page #{x + 1}", page: x + 1 %></li>
  <% end %>
</ul>
